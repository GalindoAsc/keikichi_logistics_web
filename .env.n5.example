# ============================================
# KEIKICHI LOGISTICS - N5 Pro (Windows 11)
# Configuración para Minisforum N5 Pro
# ============================================

# ----- General -----
ENVIRONMENT=production
DEBUG=false
# ⚠️ CAMBIAR ESTAS CLAVES EN PRODUCCIÓN (mínimo 32 caracteres)
SECRET_KEY=n5-production-secret-key-change-me-32chars
TIMEZONE=America/Tijuana

# ----- Database -----
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=keikichi_prod
POSTGRES_USER=keikichi
# ⚠️ CAMBIAR EN PRODUCCIÓN
POSTGRES_PASSWORD=n5-keikichi-prod-password-2024

# ----- JWT -----
# ⚠️ CAMBIAR EN PRODUCCIÓN
JWT_SECRET_KEY=n5-jwt-secret-key-change-me-32chars-minimum
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ----- Backend CORS -----
# Producción: acceso vía keikichi.com (Cloudflare/DNS externo)
BACKEND_CORS_ORIGINS=["https://keikichi.com","http://keikichi.com","http://localhost"]

# ----- Frontend (para build) -----
# URLs de producción con el dominio real
VITE_API_URL=https://keikichi.com/api/v1
VITE_WS_URL=wss://keikichi.com

# ----- Admin por defecto -----
# ⚠️ CAMBIAR EN PRODUCCIÓN
DEFAULT_ADMIN_EMAIL=admin@keikichi.com
DEFAULT_ADMIN_PASSWORD=Admin123!ChangeMe
DEFAULT_ADMIN_NAME=Administrador

# ----- Uploads -----
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xml
UPLOAD_DIR=/app/uploads

# ----- System Defaults -----
DEFAULT_SPACES_PER_TRIP=28
SPACE_HOLD_MINUTES=10
RESERVATION_CANCEL_HOURS=24
DEFAULT_CURRENCY=MXN
DEFAULT_TAX_RATE=0.16
