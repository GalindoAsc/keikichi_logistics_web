# ==========================================
# KEIKICHI LOGISTICS - Environment Variables
# ==========================================
# Copia este archivo a .env y ajusta los valores

# ----- General -----
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
TIMEZONE=America/Mexico_City

# ----- Database -----
POSTGRES_HOST=keikichi_db
POSTGRES_PORT=5432
POSTGRES_DB=keikichi_logistics_dev
POSTGRES_USER=keikichi
POSTGRES_PASSWORD=keikichi_dev_password_2024

# Constructed DATABASE_URL (usado por el backend)
# DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ----- JWT -----
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ----- Backend -----
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost"]

# ----- Frontend -----
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=http://localhost:8000

# ----- File Upload -----
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xml
UPLOAD_DIR=/app/uploads

# ----- Default Admin (primera ejecuci√≥n) -----
DEFAULT_ADMIN_EMAIL=admin@keikichi.local
DEFAULT_ADMIN_PASSWORD=Admin123!ChangeMe
DEFAULT_ADMIN_NAME=Administrador Sistema

# ----- System Defaults -----
DEFAULT_SPACES_PER_TRIP=28
SPACE_HOLD_MINUTES=15
RESERVATION_CANCEL_HOURS=24
DEFAULT_CURRENCY=MXN
DEFAULT_TAX_RATE=0.16

